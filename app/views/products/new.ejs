<% include ../partials/header %>

	<div class="row">
		<h1 style="text-align: center">Add a New Product</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action= "/products" method= "POST"> 
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="image" placeholder="image URL">
				</div>
				<div class="form-group">
 					 <input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
						</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="longdescription" placeholder="longdescription">
				</div>
					<div class="form-group">
				   <input class="form-control" type="text" name="shdescription" placeholder="shdescription">
				</div>
				<div class="form-group">
				   <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/products">Go to All Products</a>
		</div>	
	</div>



<% include ../partials/footer %>
