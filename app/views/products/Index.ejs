<% include ../partials/header %>

	<header class= "jumbotron">	
		<div>
			<h1> Cosmic Brownie </h1>
			<p>
			The stuff you didn't know you needed
			</p>
			<% if(currentUser){ %>
			<p>
			<a class= "btn btn-primary btn-large"	href="/products/new">Add New Product</a>
			</p>
			<% } %>
		</div>
	</header>

	<div class"row text-center" style="display:flex; flex-wrap: wrap;">		
		<% products.forEach(function(product){ %>
			<div class= "col-md-3 col-sm-6">
				<div class= "thumbnail">
				<a href="/products/<%= product._id %>">
					<img src="<%= product.image %>" >
					</a>
					<div class="caption">
						<h4> <%= product.name %></h4>
					<div class="shdescription">
						<h6> <%= product.shdescription %></h6>
					<div class="cost">
						<h6>$ <%= product.cost %>.00</h6>
					</div>
					</div>
				</div>
				</div>	
			</div>	 
		<% }); %>	
	
<nav aria-label="Page navigation">
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">First</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">«</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">»</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
        <li><a class="page-link" href="/products?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</nav>


</div>

		
<% include ../partials/footer %>
