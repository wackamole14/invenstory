<% include ../partials/header %>


	<div class="row">
		<h1 style="text-align: center">Edit <%=product.name%></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action= "/products/<%=product._id%>?_method=PUT" method= "POST"> 
				<div class="form-group">
					<input class="form-control" type="text" name="product[name]" value="<%=product.name%>">
				</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="product[image]" value="<%=product.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="product[cost]" value="&lt;%= product.cost %&gt;" step="0.01" min="0" required="">
				</div>
				<div class="form-group">
				    <input class="form-control" type="text" name="product[shdescription]" value="<%=product.shdescription %>">
				</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="product[longdescription]" value="<%=product.longdescription %>">
				</div>
				<div class="form-group">
				   <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/products">Go to products</a>
		</div>	
	</div>



<% include ../partials/footer %>
