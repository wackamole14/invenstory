<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center">Add New Comment to <%= product.name%> </h1>
	<div style="width: 30%; margin: 25px auto;">
		  <form action="/products/<%= product._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Add your comment here">
			</div>
			<div class="form-group">
				 <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
			</div>	
			</form>
			<a href="/products">Go to products</a>
		</div>	
	</div>



<% include ../partials/footer %>